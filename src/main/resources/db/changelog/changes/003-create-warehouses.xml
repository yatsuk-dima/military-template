<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="003-create-warehouses" author="system">
        <comment>Створення таблиці складів</comment>

        <createTable tableName="warehouses">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="code" type="VARCHAR(20)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="address" type="VARCHAR(200)"/>
            <column name="capacity" type="INTEGER"/>
            <column name="current_occupancy" type="INTEGER"/>
            <column name="has_refrigeration" type="BOOLEAN"/>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <rollback>
            <dropTable tableName="warehouses"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
